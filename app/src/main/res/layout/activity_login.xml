<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF9F1"
    android:orientation="vertical">
<!-- App Title -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CookNest"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>
<!-- Email Input improved styling-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Email">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <!-- Password Input improved styling -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Password">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
<!-- Login Button -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="16sp"
        android:backgroundTint="#FF5722"
        android:textColor="@android:color/white"
        android:text="Login"
        android:background="@drawable/rounded_button"/>
<!-- Guest Login Button -->
    <TextView
        android:id="@+id/btnGuestLogin"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Continue as Guest"
        android:textColor="#FF5722"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"/>
    <!-- OR (The Page Divider) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="#888"
        android:layout_marginVertical="8dp"/>
<!-- Facebook Login Button -->
    <com.facebook.login.widget.LoginButton
        android:id="@+id/buttonFacebookLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />
<!-- Google Login Button -->
    <Button
        android:id="@+id/btnGoogleCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_google_logo"
        android:text="Continue with Google"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <!-- Redirect to Register  -->
    <TextView
        android:id="@+id/textRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="No account? Register here"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="16sp" />
    <!-- Forgot Pass -->
    <TextView
        android:id="@+id/textForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@color/nav_selected"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>
